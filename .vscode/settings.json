{
    // ===== PREVENT FILE RESTORATION =====
    "files.refactoring.autoSave": false,
    "files.hotExit": "onExitAndWindowClose",
    "files.restoreUndoStack": false,
    // ===== GIT SETTINGS TO PREVENT FILE RESTORATION =====
    "git.autoStash": false,
    "git.autoRepositoryDetection": true,
    "git.ignoreMissingGitWarning": true,
    "git.detectSubmodules": false,
    // ===== PERFORMANCE OPTIMIZATION =====
    "python.analysis.indexing": false,
    "python.analysis.autoImportCompletions": false,
    "python.analysis.autoSearchPaths": false,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.packageIndexDepths": [
        {
            "name": "",
            "depth": 1
        }
    ],
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.lintOnSave": false,
    // ===== REDUCE FILE WATCHING =====
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.cache/**": true,
        "**/__pycache__/**": true,
        "**/*.pyc": true,
        "**/.pytest_cache/**": true,
        "**/.mypy_cache/**": true,
        "**/venv/**": true,
        "**/env/**": true,
        "**/.env/**": true,
        "**/site-packages/**": true,
        "**/.coverage": true,
        "**/htmlcov/**": true,
        "**/uv.lock": true,
        "**/*.egg-info/**": true
    },
    // ===== EDITOR PERFORMANCE =====
    "editor.restoreViewState": false,
    "workbench.editor.restoreViewState": false,
    "workbench.editor.revealIfOpen": false,
    "editor.semanticHighlighting.enabled": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairs": false,
    "editor.codeLens": false,
    "editor.inlayHints.enabled": "off",
    "editor.hover.delay": 1000,
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    // ===== SEARCH AND DISCOVERY =====
    "search.followSymlinks": false,
    "search.smartCase": false,
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,
    // ===== EXTENSIONS PERFORMANCE =====
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "telemetry.telemetryLevel": "off",
    // ===== JUPYTER OPTIMIZATION =====
    "jupyter.enableExtendedPythonKernelCompletions": false,
    "jupyter.interactiveWindow.codeLens.enable": false,
    "jupyter.askForKernelRestart": false,
    // ===== DISABLE AUTO-DISCOVERY OF DELETED FILES =====
    "files.associations": {},
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // ===== DEBUGGING FREEZES =====
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "window.autoDetectColorScheme": false,
    "update.enableWindowsBackgroundUpdates": false
}
